@model StudentDAL.Models.login

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Student_Details_N_tire.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
@{Layout=null;}
  @if( TempData["AlertMessage"] !=null)
{
    <div class="alert alert-danger">
        <strong>Error !</strong> @TempData["AlertMessage"] 
    </div>
}
<style>
    form{
        display : flex;
        flex-direction: column;
       align-items:center;
    }
 

body {
    background-color:#FEF9DB;
   
}
   .login-form-wrap {
        background-color:  #abd699;
    width: 50%;
    margin: 10% auto;
  
    padding: 20px 0 30 0;
    border-radius: 35px;
    box-shadow: 0px 30px 50px 0px rgb(0 0 0 / 20%);
}
h2{
    #16123f;
}
/*.form-group{
    padding:0px 0px 20px 10px;
}*/
input[type="submit"] {
    
    background-color:  #75c9b7;
    color: #fff;
    font-weight: bold;
   font-size: 18px;
}
input{
    height:60px;
    border-radius:6px;
    width:400px;
    border: 1px solid #c2c0ca;
        padding: 0 0 0 10px;
}
input,input[type="submit"] {
    margin-top: 20px;
}
</style>
<body>
  <div class="login-form-wrap">
         
     <form class="login-form" asp-controller="Student" asp-action="login" method="post">
            <h2>Login</h2>
         <div class="form-group">
	         @*@Html.LabelFor(m=>m.UserName) :*@
	         @Html.TextBoxFor(m=>m.UserName,new{@Placeholder="UserName"})
         </div>
         <div class="form-group">
	        @* @Html.LabelFor(m=>m.Password) :*@
	         @Html.TextBoxFor(m=>m.Password,new{@Placeholder="Password"})
         </div>

       <input type="submit" id="login" value="Login">
     </form>
  </div>
</body>


