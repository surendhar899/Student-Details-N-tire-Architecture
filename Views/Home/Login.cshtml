@model StudentDAL.Models.login

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Student_Details_N_tire.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
@{Layout=null;}
  @if( TempData["AlertMessage"] !=null)
{
    <div class="alert alert-danger">
        <strong>Error !</strong> @TempData["AlertMessage"] 
    </div>
}
<div></div>
<form asp-controller="Student" asp-action="login" method="post">
    <div class="form-group">
	@Html.LabelFor(m=>m.UserName) :
	@Html.TextBoxFor(m=>m.UserName)
</div>
<div class="form-group">
	@Html.LabelFor(m=>m.Password) :
	@Html.TextBoxFor(m=>m.Password)
</div>

  <button type="submit">Submit</button>
</form>
